    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Unit Tests for Core",
            "command": "dotnet",
            "args": [
              "build"
            ],
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
